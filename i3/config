# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle # mute sound

# change sound output device
bindsym $mod+i exec --no-startup-id ~/.config/i3/scripts/sound-output.sh 

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 20 # decrease screen brightness

# Media player controls
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioPause exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

# toggle touchpad
bindsym XF86TouchpadToggle exec --no-startup-id ~/.config/i3/scripts/touchpad-toggle.sh

# start app menu
bindsym $mod+d exec --no-startup-id rofi -show run -config ~/.config/i3/rofi.conf

# set wallpaper
exec_always --no-startup-id feh --bg-scale ~/Pictures/wallpaper.png

# sending signal to i3blocks
bindsym --release Caps_Lock exec --no-startup-id pkill -SIGRTMIN+11 i3blocks
bindsym --release Num_Lock  exec --no-startup-id pkill -SIGRTMIN+11 i3blocks
bindsym --release XF86AudioRaiseVolume exec --no-startup-id pkill -SIGRTMIN+10 i3blocks
bindsym --release XF86AudioLowerVolume  exec --no-startup-id pkill -SIGRTMIN+10 i3blocks
bindsym --release XF86AudioMute  exec --no-startup-id pkill -SIGRTMIN+10 i3blocks

# save screenshot
bindsym Print exec --no-startup-id scrot '%Y-%m-%d-%T_$wx$h_scrot.png' -e 'mv $f ~/Pictures/screenshots/'

# open some apps on start
exec --no-startup-id chromium
exec_always --no-startup-id nm-applet # run network applet
exec_always --no-startup-id blueman-applet # run bluetooth applet
exec_always --no-startup-id compton -f # for nice transitions
exec --no-startup-id setxkbmap -layout pl -option caps:escape # caps lock works as escape
exec --no-startup-id synclient VertScrollDelta=-114 # enable natural vertical scroling
exec --no-startup-id synclient HorizScrollDelta=-114 # enable natural horizontal scroling
exec_always --no-startup-id numlockx on; exec_always --no-startup-id pkill -SIGRTMIN+11 i3blocks # turn on numlock and send signal to i3blocks

exec_always --no-startup-id pkill -SIGRTMIN+10 i3blocks
