#!/usr/bin/bash

URGENT_VALUE=5
PACKAGE_COUNT=$(/usr/bin/checkupdates | wc -l)
LABEL="ï‚ª"

# update on left click
case $BLOCK_BUTTON in
  1) runupdates 
esac

if [[ "${PACKAGE_COUNT}" -gt 0 ]]; then
  echo "${LABEL} ${PACKAGE_COUNT}" # full-text
  echo "${LABEL} ${PACKAGE_COUNT}" # short-text
  echo "$(getcolor i3.block.fgrnd)"
  if [[ "${PACKAGE_COUNT}" -gt "${URGENT_VALUE}" ]]; then
    exit 33
  fi
fi
