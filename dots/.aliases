#!/bin/bash

RED='\033[0;31m'
NC='\033[0m' # No Color

# git
alias gs="printf \"${RED}git status\n${NC}\"; git status "
alias ga="echo git add --all; git add --all "
alias gc="git commit -a "
alias gcm="git commit -am "
alias gacm="git add --all && git commit -am "
alias gpl="git pull"
alias gf="git fetch"
alias gp="git push"

function gacmp () {
  printf "${RED}git add\n${NC}"
  git add --all

  printf "${RED}git commit\n${NC}"
  git commit -am "$@"

  printf "${RED}git push\n${NC}"
  git push

  printf "${RED}git status\n${NC}"
  git status
}

# cd
alias cl="clear"
alias cdd="cd ~/Projects/dotfiles/"

function cdl () {
  cd "$@" && l
}

# others
alias v="vim "
alias p="pacman "
alias y="yaourt "

# ssh
alias sshpi="ssh pi@pihole"
